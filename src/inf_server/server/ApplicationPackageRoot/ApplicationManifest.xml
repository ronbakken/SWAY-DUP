<?xml version="1.0" encoding="utf-8"?>
<ApplicationManifest xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ApplicationTypeName="serverType" ApplicationTypeVersion="1.0.0" xmlns="http://schemas.microsoft.com/2011/01/fabric">
  <Parameters>
    <Parameter Name="Users_InstanceCount" DefaultValue="-1" />
    <Parameter Name="InvitationCodes_InstanceCount" DefaultValue="-1" />
    <Parameter Name="API_InstanceCount" DefaultValue="-1" />
    <!--
        The access token that facilitates access to the user storage account
        -->
    <Parameter Name="UserStorageAccountConnectionString" DefaultValue="" />
    <Parameter Name="DatabaseAccountConnectionString" DefaultValue="" />
    <Parameter Name="LoggingStorageAccountConnectionString" DefaultValue="" />
    <Parameter Name="ElasticSearchUri" DefaultValue="" />
    <Parameter Name="ElasticSearchUserName" DefaultValue="" />
    <Parameter Name="ElasticSearchPassword" DefaultValue="" />
  </Parameters>
  <!-- Import the ServiceManifest from the ServicePackage. The ServiceManifestName and ServiceManifestVersion
       should match the Name and Version attributes of the ServiceManifest element defined in the
       ServiceManifest.xml file. -->
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="UsersPkg" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides>
      <ConfigOverride Name="Config">
        <Settings>
          <Section Name="Database">
            <Parameter Name="ConnectionString" Value="[DatabaseAccountConnectionString]" />
          </Section>
          <Section Name="Logging">
            <Parameter Name="StorageConnectionString" Value="[LoggingStorageAccountConnectionString]" />
          </Section>
          <Section Name="Search">
            <Parameter Name="Uri" Value="[ElasticSearchUri]" />
            <Parameter Name="UserName" Value="[ElasticSearchUserName]" />
            <Parameter Name="Password" Value="[ElasticSearchPassword]" />
          </Section>
        </Settings>
      </ConfigOverride>
    </ConfigOverrides>
  </ServiceManifestImport>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="InvitationCodesPkg" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides>
      <ConfigOverride Name="Config">
        <Settings>
          <Section Name="Database">
            <Parameter Name="ConnectionString" Value="[DatabaseAccountConnectionString]" />
          </Section>
          <Section Name="Logging">
            <Parameter Name="StorageConnectionString" Value="[LoggingStorageAccountConnectionString]" />
          </Section>
        </Settings>
      </ConfigOverride>
    </ConfigOverrides>
  </ServiceManifestImport>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="APIPkg" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides>
      <ConfigOverride Name="Config">
        <Settings>
          <Section Name="Storage">
            <Parameter Name="ConnectionString" Value="[UserStorageAccountConnectionString]" />
          </Section>
          <Section Name="Logging">
            <Parameter Name="StorageConnectionString" Value="[LoggingStorageAccountConnectionString]" />
          </Section>
        </Settings>
      </ConfigOverride>
    </ConfigOverrides>
  </ServiceManifestImport>
  <DefaultServices>
    <!-- The section below creates instances of service types, when an instance of this
         application type is created. You can also create one or more instances of service type using the
         ServiceFabric PowerShell module.

         The attribute ServiceTypeName below must match the name defined in the imported ServiceManifest.xml file. -->
    <Service Name="Users" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="UsersType" InstanceCount="[Users_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
    <Service Name="InvitationCodes" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="InvitationCodesType" InstanceCount="[InvitationCodes_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
    <Service Name="API" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="APIType" InstanceCount="[API_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
  </DefaultServices>
</ApplicationManifest>